<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.mapper.WordMapper">


<!--
    word テーブルの1行を Word クラスにマッピングする resultMap。
    type には対応するドメインクラスの FQCN を指定する。
  -->
  <resultMap id="WordResultMap" type="Word">
    <!-- 主キー。column は DB のカラム名、property は Java 側のフィールド名 -->
    <id     column="id"       property="id" />
    <!-- 通常カラム。column と property を対応付ける -->
    <result column="english"  property="english" />
    <result column="japanese" property="japanese" />
  </resultMap>

  <!-- 主キーで1件取得 -->
  <select id="findById" parameterType="long" resultMap="WordResultMap">
    SELECT
      id,
      english,
      japanese
    FROM
      word
    WHERE
      id = #{id}
  </select>

  <!-- 全件取得（ページネーションは別途） -->
  <select id="findAll" resultMap="WordResultMap">
    SELECT
      id,
      english,
      japanese
    FROM
      word
    ORDER BY
      id
  </select>

  <!-- 新規登録。id は AUTO_INCREMENT に任せる想定 -->
  <insert id="insert" parameterType="Word" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO word (
      english,
      japanese
    ) VALUES (
      #{english},
      #{japanese}
    )
  </insert>

  <!-- 更新。id で1件を特定して、他のカラムを更新 -->
  <update id="update" parameterType="Word">
    UPDATE word
    SET
      english  = #{english},
      japanese = #{japanese}
    WHERE
      id = #{id}
  </update>

  <!-- 主キーで1件削除 -->
  <delete id="deleteById" parameterType="long">
    DELETE FROM word
    WHERE id = #{id}
  </delete>


  <!--●クイズ用-->


  <!-- ★ クイズ用: ランダムに1件の単語を取得 -->
  <select id="selectRandomWord" resultMap="WordResultMap">
    SELECT
      id,
      english,
      japanese
    FROM
      word
    ORDER BY
      RAND()
    LIMIT 1
  </select>

  <!-- ★ クイズ用: 誤答候補の日本語をランダムに複数取得 -->
  <select id="selectRandomWrongAnswers"
          parameterType="map"
          resultType="string">
    SELECT
      japanese
    FROM
      word
    WHERE
      id != #{id}              <!-- 正解の行は除外 -->
    ORDER BY
      RAND()
    LIMIT #{limit}             <!-- ほしい件数分だけ取得 -->
  </select>
  
  


  <!--●ページネーション用-->

  <!-- （ページネーション用）全件数を取得 -->
  <select id="countAll" resultType="int">
    SELECT
      COUNT(*)
    FROM
      word
  </select>
  
    <!-- （ページネーション用）: offset/limit でデータを取得 -->
  <select id="findPage" resultMap="WordResultMap">
    SELECT
      id,
      english,
      japanese
    FROM
      word
    ORDER BY
      id
    <!-- MySQL 形式の LIMIT offset, limit -->
    LIMIT #{offset}, #{limit}
  </select>
  
  
  
  <!-- ●ここから検索付きページネーション用 -->

  <!--
    キーワード条件でヒットする件数を数える。
    keyword が null/空 の場合は WHERE 句なし（全件）。
  -->
  <select id="countByKeyword"
          parameterType="string"
          resultType="int">
    SELECT
      COUNT(*)
    FROM
      word
    <where>
      <!-- keyword が null/空 でなければ、英語 or 日本語に部分一致 -->
      <if test="keyword != null and keyword != ''">
        (english  LIKE CONCAT('%', #{keyword}, '%')
         OR japanese LIKE CONCAT('%', #{keyword}, '%'))
      </if>
    </where>
  </select>

  <!--
    キーワード条件＋ページネーションでデータを取得。
    - keyword: 検索語（null/空なら WHERE なし）
    - offset: 先頭からスキップする件数
    - limit:  取得件数
  -->
  <select id="findPageByKeyword"
          resultMap="WordResultMap">
    SELECT
      id,
      english,
      japanese
    FROM
      word
    <where>
      <if test="keyword != null and keyword != ''">
        (english  LIKE CONCAT('%', #{keyword}, '%')
         OR japanese LIKE CONCAT('%', #{keyword}, '%'))
      </if>
    </where>
    ORDER BY
      id
    LIMIT #{offset}, #{limit}
  </select>
  






</mapper>